		<!-- 9 --><result property="password"  column="password" />
		<!-- 10 --><result property="salt"  column="salt" />
		<!-- 11 --><result property="locked"  column="locked" />
		<!-- 12 --><result property="lastAttemptedLoginTime"  column="last_attempted_login_time" />
		<!-- 13 --><result property="passwordErrorTimes"  column="password_error_times" />

	</resultMap>

	<resultMap type="UserVo" id="UserVoResultMap">
				<!-- 0 --><result property="id"  column="id" />
		<!-- 1 --><result property="creatorName"  column="creator_name" />
		<!-- 2 --><result property="updaterName"  column="updater_name" />
		<!-- 3 --><result property="createdTime"  column="created_time" />
		<!-- 4 --><result property="updatedTime"  column="updated_time" />
